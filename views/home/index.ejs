				<div class="grid">
				<div class="grid-heading">
					<h1>Your Videos <%= user.username %></h1>
				</div>

		        
		        
			            

				<div class = "grid-data">

					<div class="grid-header">
						<div class = "grid-header-cell video-title">Video title</div>
						<div class = "grid-header-cell">Last modified</div>
						<div class = "grid-header-cell">Share</div>
						<div class = "grid-header-cell">Delete</div>
					</div>


					<table class="table">
		        	<% for(i=0 ; i < vedio.length ; i++) { %>
						<div class="grid-body">

							<div class="grid-body-cell grid-video">
								<img src="img/sample-video1.png" alt="" width="140px" height="90px"> 
								<div class="grid-play-button"></div>
							</div>

							<div class="grid-body-cell"> 
								<span><%= vedio[i]['vedio'] %></span>
							</div>
							
							<div class="grid-body-cell">
								<span><%= vedio[i]['updatedAt'] %></span>
							</div>
							
							<div class="grid-body-cell popover"> 
								<img src="img/share.png" alt="">
							</div>
							<div class="grid-body-cell">
								<a href = '/deleteVedio/<%= vedio[i]['id'] %>'><img src="img/trash.png" alt="" class ="delete"></img></a>
